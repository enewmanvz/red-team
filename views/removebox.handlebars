{{> employeemenu}}
<div class="container">
    <h3 class="mt-5 text-center mb-5">Remove Box</h3>  
</div>
<div class="container">

     
     <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="select_palette_value">
            <option selected>Select Palette...</option>
             {{#each PalletBoxes}}
                <option value={{this.paletteboxID}}>Box: &nbsp;[{{this.boxLabel}}] from Palette: [{{this.paletteLabel}}] &nbsp; </option>
            {{/each}}
    </select>   
    
    
</div>

   <div class="container" style="margin: 0 auto;">
        <form class="row" action="/box/removeAction" method="post" id="removeBoxForm">
            <div class="mb-3 row align-items-center justify-content-around">
                    <button type="submit" class="btn btn-info mb-3 w-50">Remove Box</button>
            </div>
        </form>
        
    </div>
</div>
<script src="/removebox.js"></script>


    
    