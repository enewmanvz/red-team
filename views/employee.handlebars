{{> employeemenu}}
<body class="dashboard">
<div class="container">
    <h3 class="text-center text-light">Welcome {{getWarehouseInfo.firstName}}</h3>
</div>
<div class="container login pb-3 mini">
    <h4 class="text-center">You are currently assigned to the following site:</h4>
    <div class="card text-center border-info mx-auto" style="width: 30vw;">
        <img src="{{singleWarehouse.image}}" class="card-img-top" alt="front of warehouse">
        <div class="card-body">
            <h5 class="card-title">Site Name: {{singleWarehouse.name}}</h5>
            <p class="card-text">Location: {{singleWarehouse.location}}</p>
            <p class="card-text">Capacity: {{singleWarehouse.capacity}}</p>
        </div>
    </div>
</div>
</body>